root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[{*.bat,*.cmd,*.vbs,*.wsf,*.reg,*.ps1,*.psm1,*.psd1}]
charset = utf-8-bom
end_of_line = crlf

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab
indent_size = 8
